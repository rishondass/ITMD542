<body class="m-10">
    <div id="createContactModal" class="hidden bg-black bg-opacity-50 fixed inset-0 z-9 flex justify-center items-center">
        <div class="bg-white w-96 h-auto p-5 rounded-md">
            <div class="flex justify-end">
                <button id="closeContactModalBtn"><img src="img/closeIcon.svg" alt="closeIcon" width="25px"></button>
            </div>
            <form id="createContactForm" action="/contacts/createContact" method="POST" class="flex flex-col">
                <label for="firstName">First Name:</label>
                <input class="p-2 focus:outline-none border border-green-400 rounded-md" type="text" name="firstName" id="firstName" required>
                <label for="lastName">Last Name:</label>
                <input class="p-2 focus:outline-none border border-green-400 rounded-md" type="text" name="lastName" id="lastName" required>
                <label for="email">Email:</label>
                <input class="p-2 focus:outline-none border border-green-400 rounded-md" type="email" name="email" id="email">
                <label for="notes">Notes:</label>
                <textarea class="p-2 focus:outline-none border border-green-400 rounded-md" id="notes" name="notes" form="createContactForm"></textarea>
                <button type="submit" class="rounded-md mt-4 p-2 text-white bg-green-400 hover:bg-green-500">Add</button>
            </form>
        </div>
        
