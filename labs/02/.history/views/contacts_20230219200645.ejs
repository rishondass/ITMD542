    <div>
        <h1 class="text-center text-2xl">Contacts Database</h1>
        <a href="/" class="rounded-md p-2 text-white bg-green-400 hover:bg-green-500">Home</a>
        <button id="createContactBtn" class="rounded-md p-2 text-white bg-green-400 hover:bg-green-500">Create</button>
    </div>
    <div class="flex justify-center p-4">
        <table class="table-auto">
            <thead class="bg-green-400 rounded-lg text-white">
              <tr>
                <th class="px-4">First Name</th>
                <th class="px-4">Last Name</th>
                <th class="px-4">Email Address</th>
                <th class="px-4"></th>
                <th class="px-4"></th>
                <th class="px-4"></th>
              </tr>
            </thead>
            <tbody>
                <%for(var i = 0; i < contactsData.length; i++){%>
                    <tr>
                        <td class="px-4"><%=contactsData[i].firstName%></td>
                        <td class="px-4"><%=contactsData[i].lastName%></td>
                        <td class="px-4"><%=contactsData[i].email%></td>
                        <td class="px-4"><a href="">view</a></td>
                        <td class="px-4"><a href="">edit</a></td>
                        <form action="/deleteContact/:id" method="POST">
                            <button type="submit" name="your_name" value="your_value" class="btn-link">Go</button>
                        </form>
                        <td class="px-4"><a href="/delete">delete</a></td>
                    </tr>
                <%}%>
            </tbody>
          </table>
